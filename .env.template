# ============================================================
# === ISHE GROUP AI PLATFORM - Environment Configuration ===
# Copy this to .env and fill values before running the app
# ============================================================

# --- Railway Deployment ---
RAILWAY_TOKEN=
# Get your Railway token from: https://railway.app/account/tokens

# --- Core Runtime ---
PYTHONPATH=.
HOST=0.0.0.0
PORT=${PORT:-8080}
ENVIRONMENT=production

# --- Database (Supabase PostgreSQL) ---
# Get these from your Supabase project settings -> Database
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_KEY=
# Alternative DB configuration (if not using DATABASE_URL)
DB_HOST=db.[PROJECT-REF].supabase.co
DB_USERNAME=postgres
DB_PASSWORD=
DB_NAME=postgres
DB_URL=${DATABASE_URL}

# --- Redis (Railway Plugin or External) ---
REDIS_URL=redis://default:[PASSWORD]@[HOST]:[PORT]
# Alternative format: redis://:[PASSWORD]@[HOST]:[PORT]

# --- API Keys ---
OPENAI_API_KEY=
GOOGLE_API_KEY=
GEMINI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1

# --- Model Configuration ---
MODEL_NAME=gpt-3.5-turbo-0301
RESOURCES_SUMMARY_MODEL_NAME=gpt-3.5-turbo
MAX_TOOL_TOKEN_LIMIT=800
MAX_MODEL_TOKEN_LIMIT=4032

# --- Security & Authentication ---
JWT_SECRET_KEY=
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=
# Must be 32 characters

# --- Frontend Configuration ---
FRONTEND_URL=${RAILWAY_STATIC_URL}
# Railway automatically provides RAILWAY_STATIC_URL

# --- Google OAuth (for Drive, Gmail, Sheets, Calendar) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# --- CRM Department Agents Configuration ---
# Agents will be created with human names for each department
MASTER_AGENT_NAME=RebeccaHQ
DEFAULT_LANGUAGE=en-GB
DEFAULT_VOICE=UK-Female-Free

# --- Feature Toggles ---
ENABLE_CHATBOT=True
ENABLE_SPEECH=True
ENABLE_GOOGLE_CONNECTORS=True
ENABLE_SUPABASE_MEMORY=True

# --- Storage Configuration ---
STORAGE_TYPE=FILE
# Options: FILE, S3
TOOLS_DIR=superagi/tools
RESOURCES_INPUT_ROOT_DIR=workspace/input/{agent_id}
RESOURCES_OUTPUT_ROOT_DIR=workspace/output/{agent_id}/{agent_execution_id}

# --- Vector Database (Weaviate) ---
WEAVIATE_USE_EMBEDDED=true
# For production, consider hosted Weaviate:
# WEAVIATE_URL=
# WEAVIATE_API_KEY=

# --- Additional Tool API Keys (Optional) ---
SERP_API_KEY=
SEARCH_ENGINE_ID=
STABILITY_API_KEY=
SLACK_BOT_TOKEN=
GITHUB_ACCESS_TOKEN=
GITHUB_USERNAME=
JIRA_INSTANCE_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

# --- Email Configuration (Optional) ---
EMAIL_ADDRESS=
EMAIL_PASSWORD=
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_SIGNATURE=Email sent by ISHE Group AI Platform
